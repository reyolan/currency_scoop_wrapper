<h1 class='font-bold text-5xl mb-4 text-center'>List of Fiat Currencies</h1>
<div class='overflow-auto h-3/6 w-5/6'>
  <table class='bg-blue-100'>
    <thead>
      <tr class='bg-blue-500'>
        <th class='p-2'>Currency Code</th>
        <th>Currency Name</th>
        <th>Decimal Units</th>
        <th>Countries</th>
      </tr>
    </thead>
    <tbody>
      <% @currencies.each do |currency|%>
        <tr class='text-center hover:bg-blue-200'>
          <td class='p-1'><%= currency.currency_code %></td>
          <td><%= currency.currency_name %></td>
          <td><%= currency.decimal_units %></td>
          <td class='break-words'><%= currency.countries.join(', ') %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
