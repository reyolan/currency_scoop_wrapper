<h1 class='font-bold text-5xl mb-4'>List of Fiat Currencies</h1>
<div class='flex flex-wrap gap-2 mb-2'>
  <%= link_to 'Currency Rates', currency_rates_path, class: 'bg-blue-300 py-1 px-3 rounded-lg text-xl hover:bg-blue-400 font-medium' %>
  <%= link_to 'Convert Currency', new_convert_currency_path, class: 'bg-blue-300 py-1 px-3 rounded-lg text-xl hover:bg-blue-400 font-medium' %>
  <%= link_to 'Historical Exchange Rate', new_historical_exchange_rate_path, class: 'bg-blue-300 py-1 px-3 rounded-lg text-xl hover:bg-blue-400 font-medium' %>
</div>
<div class='overflow-auto h-3/6 w-5/6'>
  <table class='bg-blue-100'>
    <thead>
      <tr class='bg-blue-500'>
        <th class='p-2'>Currency Code</th>
        <th>Currency Name</th>
        <th>Decimal Units</th>
        <th>Countries</th>
      </tr>
    </thead>
    <tbody>
      <% @currencies.each do |currency|%>
        <tr class='text-center hover:bg-blue-200'>
          <td class='p-1'><%= currency.currency_code %></td>
          <td><%= currency.currency_name %></td>
          <td><%= currency.decimal_units %></td>
          <td class='break-words'><%= currency.countries.join(', ') %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
