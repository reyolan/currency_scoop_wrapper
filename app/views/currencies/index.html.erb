<h1 class='font-bold text-5xl mb-4'>List of Fiat Currencies</h1>
<%= link_to 'Currency Rates', currency_rates_path %>
<div class='overflow-auto h-3/6 w-5/6'>
  <table>
    <thead>
      <tr>
        <th>Currency Code</th>
        <th>Currency Name</th>
        <th>Decimal Units</th>
        <th>Countries</th>
      </tr>
    </thead>
    <tbody>
      <% @fiat_currencies.each do |currency|%>
        <tr class='text-center'>
          <td><%= currency['currency_code'] %></td>
          <td><%= currency['currency_name'] %></td>
          <td><%= currency['decimal_units'] %></td>
          <td class='break-words'><%= currency['countries'].join(', ') %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
