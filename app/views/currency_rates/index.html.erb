<h1 class='font-bold text-5xl mb-4'>Currency Rates</h1>
<%= link_to 'Currencies', currencies_path %>
<%= link_to 'Convert Currency', new_convert_currency_path %>
<%= link_to 'Historical Exchange Rate', new_historical_exchange_rate_path %>
<p>Date: <%= @currency_rates_data.date %></p>
<p>Base Currency: <%= @currency_rates_data.base %></p>
<%= form_with scope: :currency_rate, url: currency_rates_path, class: 'bg-slate-200 rounded-md p-4' do |f| %>
  <%= f.label :base, 'Base Currency:' %>
  <%= f.text_field :base %>
  <p> Leave symbols blank, if you want see all the conversion rate. </p>
  <p> To show specific currency exchange rate, input its currency code separated by comma (e.g. USD,PHP,AUD). </p>
  <%= f.label :symbols, 'Currency Code:'%>
  <%= f.text_field :symbols %>
  <%= f.submit 'Search' %>
<% end %>
<div class='overflow-auto h-3/6 w-fit'>
  <table>
    <thead>
      <tr>
        <th>Currency Code</th>
        <th>Conversion Rate (=1<%=@currency_rates_data.base%>)</th>
      </tr>
    </thead>
    <tbody>
      <% @currency_rates_data.rates.each do |currency_rate|%>
        <tr class='text-center'>
          <td><%= currency_rate[0] %></td>
          <td><%= currency_rate[1] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
