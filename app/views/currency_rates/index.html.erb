<h1 class='font-bold text-5xl mb-4'>Currency Rates</h1>
<div class='flex flex-wrap gap-2'>
  <%= link_to 'Currencies', currencies_path, class: 'bg-blue-300 py-1 px-3 rounded-lg text-xl hover:bg-blue-400 font-medium' %>
  <%= link_to 'Convert Currency', new_convert_currency_path, class: 'bg-blue-300 py-1 px-3 rounded-lg text-xl hover:bg-blue-400 font-medium' %>
  <%= link_to 'Historical Exchange Rate', new_historical_exchange_rate_path, class: 'bg-blue-300 py-1 px-3 rounded-lg text-xl hover:bg-blue-400 font-medium' %>
</div>
<div class='flex flex-wrap gap-4 mt-2 text-lg'>
  <p>Date: <%= @currency_rates_data.date %></p>
  <p>Base Currency: <%= @currency_rates_data.base %></p>
</div>
<div class='overflow-auto max-h-60 w-fit'>
  <table class='bg-blue-100'>
    <thead>
      <tr class='bg-blue-500'>
        <th class='p-2'>Currency Code</th>
        <th>Conversion Rate (=1<%=@currency_rates_data.base%>)</th>
      </tr>
    </thead>
    <tbody>
      <% @currency_rates_data.rates.each do |currency_rate|%>
        <tr class='text-center'>
          <td class='p-1'><%= currency_rate[0] %></td>
          <td><%= currency_rate[1] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= form_with scope: :currency_rate, url: currency_rates_path, class: 'bg-slate-200 rounded-md p-4 flex flex-col gap-2 mt-2' do |f| %>
  <div class='flex flex-col'>
    <%= f.label :base, 'Base Currency', class: 'text-lg' %>
    <%= f.text_field :base, class: 'rounded-lg' %>
  </div>
  <div class='flex flex-col mb-2'>
    <%= f.label :symbols, 'Currency Codes (e.g. USD, PHP, AUD or leave blank)', class: 'text-lg'%>
    <%= f.text_field :symbols, class: 'rounded-lg' %>
  </div>
  <%= f.submit 'Search', class: 'bg-blue-300 py-1 px-3 rounded-lg text-xl hover:bg-blue-400 font-medium cursor-pointer' %>
<% end %>
