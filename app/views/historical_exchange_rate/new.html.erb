<h1 class='font-bold text-5xl mb-4'>Historical Exchange Rate</h1>
<div class='flex flex-wrap gap-2 mb-2'>
  <%= link_to 'Currencies', currencies_path, class: 'bg-blue-300 py-1 px-3 rounded-lg text-xl hover:bg-blue-400 font-medium' %>
  <%= link_to 'Currency Rates', currency_rates_path, class: 'bg-blue-300 py-1 px-3 rounded-lg text-xl hover:bg-blue-400 font-medium' %>
  <%= link_to 'Convert Currency', new_convert_currency_path, class: 'bg-blue-300 py-1 px-3 rounded-lg text-xl hover:bg-blue-400 font-medium' %>
</div>
<%= form_with scope: :historical_exchange_rate, url: historical_exchange_rate_path, class: 'bg-slate-200 rounded-md p-4' do |f| %>
  <div class='flex flex-col'>
    <%= f.label :base, 'Base Currency:' %>
    <%= f.text_field :base %>
  </div>
  <div class='flex flex-col'>
    <%= f.label :date, 'Date:'%>
    <%= f.date_field :date %>
  </div>
  <div class='flex flex-col'>
    <%= f.label :symbols, 'Symbols to Search:'%>
    <%= f.text_field :symbols %>
  </div>
  <%= f.submit 'See Historical Exchange Rate', class: 'bg-blue-300 py-1 px-3 rounded-lg text-xl hover:bg-blue-400 font-medium cursor-pointer' %>
<% end %>
